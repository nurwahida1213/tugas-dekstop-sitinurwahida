<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.demodesktop.controller.BookDetailController">
    <top>
        <ToolBar>
            <Button text="Close" onAction="#handleClose"/>
        </ToolBar>
    </top>
    <center>
        <GridPane padding="10" hgap="10" vgap="10">
            <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="idField" editable="false" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField" editable="false" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Instansi:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="instansiField" editable="false" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Title:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="titleField" editable="false" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Borrow Date:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="borrowDateField" editable="false" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Return Date:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <TextField fx:id="returnDateField" editable="false" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
        </GridPane>
    </center>
</BorderPane>
